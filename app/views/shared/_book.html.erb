<div class="col mb-5">
  <div class="card h-100">
    <!-- Product image-->
    <img
      class="card-img-top"
      src="https://dummyimage.com/300x450/dee2e6/6c757d.jpg"
      alt="..."
    />
    <!-- Product details-->
    <div class="card-body p-4">
      <div class="text-center">
        <%= link_to "#" do %>
          <h5 class="fw-bolder"> <%= book.name %></h5>
        <% end %>
        <!-- Product price-->
        <%= number_to_currency book.price, locale: :vi %>
        <div class="d-flex justify-content-center small text-warning mb-2">
          <% book.rate_score.round().times do %>
            <div class="bi-star-fill"></div>
          <% end %>
          <% (Settings.length.rate - book.rate_score.round()).times do %>
            <div class="bi-star"></div>
          <% end %>
        </div>
      </div>
    </div>
    <!-- Product actions-->
    <div class="card-footer p-4 pt-0 border-top-0 bg-transparent">
      <div class="text-center">
        <%= link_to t(".borrow"), "#", {class: "btn btn-outline-dark mt-auto"} %>
      </div>
    </div>
  </div>
</div>
