<% provide :title, t(".title") %>
<div class="container">
  <!-- Outer Row -->
  <div class="row justify-content-center">
    <div class="col-xl-10 col-lg-12 col-md-9">
      <div class="card o-hidden border-0 shadow-lg my-5">
        <div class="card-body p-0">
          <!-- Nested Row within Card Body -->
          <div class="row">
            <div class="col-lg-6 d-none d-lg-block bg-login-image"></div>
            <div class="col-lg-6">
              <div class="p-5">
                <div class="text-center">
                  <h1 class="h4 text-gray-900 mb-4"><%= t ".welcome" %></h1>
                </div>
                <%= form_for :session, url: login_path do |f| %>
                  <div class="form-group">
                    <%= f.email_field :email, class: "form-control form-control-user", placeholder: t(".email_holder") %>
                  </div>
                  <div class="form-group">
                    <%= f.password_field :password, class: "form-control form-control-user", placeholder: t(".password_holder") %>
                  </div>
                  <%= f.submit t(".submit"), class: "btn btn-primary btn-user btn-block" %>
                <% end %>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
