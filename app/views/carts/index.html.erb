<% provide :title, t(".title") %>
<div class="container mb-5">
  <div class="d-flex justify-content-center row">
    <div class="col-md-8">
      <div class="p-2">
        <h4><%= t ".cart" %></h4>
      </div>
      <div id="cart_books">
        <div class="d-flex flex-row justify-content-between align-items-center p-2 bg-white mt-4 px-3 rounded">
          <div class="col-2">
            <%= t ".book" %>
          </div>
          <div class="col">
            <%= t ".name" %>
          </div>
          <div class="col">
            <%= t ".price" %>
          </div>
          <div class="d-flex align-items-center">
            <i class="fa fa-trash mb-1"></i>
          </div>
        </div>
        <%= render partial: "book", collection: @books, as: :book %>
        <div class="d-flex flex-row justify-content-between align-items-center p-2 bg-white mt-4 px-3 rounded">
          <div class="col-2 mr-1">
            <span class="font-weight-bold">
              <%= t ".total" %>
            </span>
          </div>
          <div class="col align-items-center product-details">
          </div>
          <div class="col">
            <h5 class="text-grey">
              <%= number_to_currency total_price(@books), locale: :vi %>
            </h5>
          </div>
          <div class="d-flex align-items-center">
            <i class="fas fa-money-bill-alt mb-1 px-2"></i>
          </div>
        </div>
      </div>
      <div class="d-flex flex-row align-items-center mt-3 p-2 bg-white rounded">
        <button class="btn btn-warning btn-block btn-lg ml-2 pay-button" type="button"><%= t ".submit" %></button>
      </div>
    </div>
  </div>
</div>
