<li class="row">
  <div class="col-9">
    <i class="fas fa-fw fa-male"></i>
    <%= link_to publisher.name, [:admin, publisher] %>
  </div>
  <div class="col">
    <% if current_user.is_admin %>
      <%= link_to t(".edit"), edit_admin_publisher_path(publisher),
        class: "btn btn-warning" %>
      <%= link_to t(".delete"), [:admin, publisher], method: :delete,
        class: "btn btn-danger", data: { confirm: t(".rusure") } %>
    <% end %>
  </div>
</li>
<hr class="sidebar-divider">
