<li class="row">
  <div class="col-9">
    <i class="fas fa-fw fa-male"></i>
    <%= link_to author.name, [:admin, author] %>
  </div>
  <div class="col">
    <% if current_user.is_admin %>
      <%= link_to t(".edit"), edit_admin_author_path(author),
        class: "btn btn-warning" %>
      <%= link_to t(".delete"), [:admin, author], method: :delete,
        class: "btn btn-danger", data: { confirm: t(".rusure") } %>
    <% end %>
  </div>
</li>
<hr class="sidebar-divider">
