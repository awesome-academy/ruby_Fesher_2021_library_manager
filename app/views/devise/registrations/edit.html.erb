<% provide :title, t(".title") %>
<h2><%= resource_name.to_s.humanize %></h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>

  <div class="form-group">
    <%= f.label :name, t(".name"), class: "required" %>
    <%= f.text_field :name, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= f.label :phone, t(".phone"), class: "required" %>
    <%= f.text_field :phone, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= f.label :address, t(".address"), class: "required" %>
    <%= f.text_field :address, class: "form-control" %>
  </div>

  <div class="field">
    <%= f.label :password, t(".password") %> <i>(<%= t ".leave_it_blank" %>)</i><br />
    <%= f.password_field :password, autocomplete: "new-password" %>
    <% if @minimum_password_length %>
      <br />
      <em>(<%= t ".minumun", minimum: @minimum_password_length %>)</em>
    <% end %>
  </div>

  <div class="field">
    <%= f.label :password_confirmation, t(".confirmation") %><br />
    <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
  </div>

  <div class="field">
    <%= f.label :current_password %> <i>(<%= t ".need_pw" %>)</i><br />
    <%= f.password_field :current_password, autocomplete: "current-password" %>
  </div>

  <div class="actions">
    <%= f.submit t(".submit") %>
  </div>
<% end %>

<h3><%= t ".cancel" %></h3>

<p><%= t ".unhp" %> <%= button_to t(".cancel"), registration_path(resource_name), data: { confirm: t(".confirm") }, method: :delete %></p>

<%= link_to t(".back"), :back %>
