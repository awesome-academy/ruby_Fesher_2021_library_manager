<% provide :title, t(".title") %>
<div class="container">
  <div class="row">
    <div class="col-lg-6 d-none d-lg-block bg-login-image"></div>
    <div class="col-lg-6">
      <div class="p-4">
        <div class="text-center">
          <h1 class="h4 text-gray-900 mb-4"><%= t ".welcome" %></h1>
        </div>
        <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
          <%= render "devise/shared/error_messages", resource: resource %>

          <div class="form-group">
            <%= f.label :name, t(".name"), class: "required" %>
            <%= f.text_field :name, class: "form-control" %>
          </div>
          <div class="form-group">
            <%= f.label :email, t(".email"), class: "required" %>
            <%= f.email_field :email, class: "form-control" %>
          </div>
          <div class="form-group">
            <%= f.label :phone, t(".phone"), class: "required" %>
            <%= f.text_field :phone, class: "form-control" %>
          </div>
          <div class="form-group">
            <%= f.label :address, t(".address"), class: "required" %>
            <%= f.text_field :address, class: "form-control" %>
          </div>
          <div class="form-group row">
            <div class="col-sm-6 mb-3 mb-sm-0">
              <%= f.label :password, t(".password"), class: "required" %>
              <%= f.password_field :password, class: "form-control" %>
            </div>
            <div class="col-sm-6">
              <%= f.label :password_confirmation, t(".confirmation"), class: "required" %>
              <%= f.password_field :password_confirmation, class: "form-control" %>
            </div>
          </div>
          <div class="actions">
            <%= f.submit t(".submit"), class: "btn btn-primary btn-user btn-block" %>
          </div>
        <% end %>
        <%= render "devise/shared/links" %>
      </div>
    </div>
  </div>
</div>
