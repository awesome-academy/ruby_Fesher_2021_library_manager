<% provide :title, t(".title") %>
<div class="container">
  <div class="row">
    <div class="col-lg-6 d-none d-lg-block bg-login-image"></div>
    <div class="col-lg-6">
      <div class="p-5">
        <div class="text-center">
          <h1 class="h4 text-gray-900 mb-4"><%= t ".welcome" %></h1>
        </div>
        <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
          <div class="form-group">
            <%= f.email_field :email, class: "form-control form-control-user", autofocus: true, autocomplete: "email", placeholder: t(".email_holder") %>
          </div>
          <div class="form-group">
            <%= f.password_field :password, class: "form-control form-control-user", autocomplete: "current-password", placeholder: t(".password_holder") %>
          </div>
          <% if devise_mapping.rememberable? %>
            <div class="form-group">
              <%= f.check_box :remember_me %>
              <%= f.label t(".remember_me") %>
            </div>
          <% end %>
          <div class="actions">
            <%= f.submit t(".submmit"), class: "btn btn-primary btn-user btn-block" %>
          </div>
        <% end %>
        <%= render "devise/shared/links" %>
      </div>
    </div>
  </div>
</div>
