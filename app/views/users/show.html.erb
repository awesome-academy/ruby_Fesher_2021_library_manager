<% provide:title, @user.name %>
<%= render "user" %>
<h1>
  <%= t ".requests" %>
</h1>
<% if current_user == @user %>
  <%== pagy_bootstrap_nav(@pagy) if @pagy.pages > 1 %>
  <table class="table">
    <thead>
      <tr>
        <th scope="col"><%= t ".id" %></th>
        <th scope="col"><%= t ".book_name" %></th>
        <th scope="col"><%= t ".begin_day" %></th>
        <th scope="col"><%= t ".end_day" %></th>
        <th scope="col"><%= t ".status" %></th>
        <th scope="col"><%= t ".update" %></th>
      </tr>
    </thead>
    <tbody>
      <%= render partial: :request , collection: @requests, as: :request %>
    </tbody>
  </table>
<% end %>
