<%= form_for(@user) do |f| %>
  <%= render "shared/error_messages", object: f.object %>
  <div class="form-group">
    <%= f.label :name, t(".name"), {class: "required"} %>
    <%= f.text_field :name, class: "form-control" %>
  </div>
  <div class="form-group">
    <%= f.label :email, t(".email"), {class: "required"} %>
    <%= f.email_field :email, class: "form-control" %>
  </div>
  <div class="form-group">
    <%= f.label :phone, t(".phone"), {class: "required"} %>
    <%= f.text_field :phone, class: "form-control" %>
  </div>
  <div class="form-group">
    <%= f.label :address, t(".address") %>
    <%= f.text_field :address, class: "form-control" %>
  </div>
  <div class="form-group row">
    <div class="col-sm-6 mb-3 mb-sm-0">
      <%= f.label :password, t(".password"), {class: "required"} %>
      <%= f.password_field :password, class: "form-control" %>
    </div>
    <div class="col-sm-6">
      <%= f.label :password_confirmation, t(".confirmation"), {class: "required"} %>
      <%= f.password_field :password_confirmation, class: "form-control" %>
    </div>
  </div>
  <%= f.submit yield(:button_text), class: "btn btn-primary btn-user btn-block" %>
<% end %>
